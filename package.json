{
  "name": "vl-ui-form-validation",
  "version": "1.0.3",
  "description": "De formulier validatie verzekert dat bij het invullen van het formulier de input van de gebruiker geldig is.",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "wct -l chrome,firefox --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-form-validation.js -- *.src.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-form-validation/style.css' vl-form-validation.js",
    "release:prepare:commit": "git add -f vl-form-validation.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-form-validation.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-ui-form-validation/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-form-validation#readme",
  "dependencies": {
    "vl-ui-core": "^2.0.0",
    "replace": "^1.1.1",
    "@govflanders/vl-ui-form-validation": "^3.9.1"
  },
  "devDependencies": {
    "@govflanders/vl-ui-util": "^3.9.1",
    "np": "3.0.4",
    "sinon": "7.5.0",
    "uglify-js-es6": "2.8.9",
    "vl-ui-button": "^1.3.0",
    "vl-ui-form-grid": "^1.0.12",
    "vl-ui-form-message": "^3.0.0",
    "vl-ui-input-field": "^1.1.1",
    "vl-ui-util": "^3.4.2",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  }
}
